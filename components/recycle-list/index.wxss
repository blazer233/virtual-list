.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: #f7f7f7;
}

.top {
  box-sizing: border-box;
  padding: 0 30rpx;
  position: fixed;
  width: 100%;
  top: 0;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #f7f7f7;
  background: #fff;
  z-index: 1;
}

.searchBox {
  flex: 1;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28prx;
  color: #b2b2b2;
  font-weight: 500;
  padding: 0 30rpx;
  margin-right: 18rpx;
}

.top span {
  color: #b2b2b2;
  font-size: 28rpx;
  margin: 0 17rpx 0 10rpx;
}

input {
  flex: 1;
  color: #363636;
  font-size: 28rpx;
  font-weight: bold;
  align-items: center;
}

.history {
  width: 150rpx;
  height: 100%;
  font-size: 28rpx;
  color: #363636;
  font-weight: bold;
  text-align: center;
  line-height: 90rpx;
}

.allHistory {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.allHistory view {
  max-width: 660rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #888888;
  line-height: 60rpx;
  background-color: #f7f7f7;
  margin: 10rpx 30rpx 10rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.lsmap {
  height: calc(100vh - 104rpx - (env(safe-area-inset-bottom) / 2));
}

.faqItemMap {
  margin: 25rpx 36rpx;
  background: antiquewhite;
}

.faqsItemTitle {
  font-size: 34rpx;
  font-weight: 600;
  color: #353535;
  line-height: 40rpx;
  margin-bottom: 14rpx;
}

.faqsContent {
  display: flex;
}

.faqsDes {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #525252;
}

.qname {
  color: #4177ff;
}

.qimg {
  width: 220rpx;
  height: 137rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  margin-left: 26rpx;
}

.faqsTipsMap {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 500;
  color: #a9a9a9;
  margin-top: 16rpx;
}

.faqsTime {
  margin-right: 15rpx;
}

.qTotal {
  margin-right: 15rpx;
}

.line {
  margin: 0 36rpx;
  height: 2rpx;
  background: #f7f7f7;
}

.noAnswerBtn {
  padding: 0 20rpx;
  background: #f6f9ff;
  background-color: #f6f9ff !important;
  font-size: 24rpx;
  font-weight: 500;
  color: #4177ff;
  line-height: 50rpx;
  height: auto;
  border-radius: 25rpx;
}