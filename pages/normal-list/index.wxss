.box-all {
  margin: 24rpx;
  position: relative;
  padding: 12rpx;
  background: antiquewhite;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
}
.box-all:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: -12rpx;
  right: 0;
  height: 2rpx;
  border-bottom: 2rpx solid red;
  color: red;
  transform-origin: 0 100%;
  transform: scaleY(0.5);
  box-sizing: border-box;
}
.box-ctx {
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
}
.lsmap {
  height: 500rpx;
}
